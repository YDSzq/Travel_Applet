
.user-top {
	width: 100%;
	height: 10vw;
	position: fixed;
	color: #fff;
	line-height: 10vw;
	padding: 3vw;
}
.user-top ._i {
	font-size: 7vw;
}
.user_top {
	width: 100%;
	height: 10vw;
	padding-top: 20vw;
	background-size: cover;
	background-position: center;
	color: #555;
	font-size: 5vw;
}
.user_name {
	color: #333;
	font-size: 8vw;
	margin-left: 30vw;
	margin-top: 8vw;
	line-height: 14vw;
	width: 40vw;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	display: inline-block;
}
.user_headimg {
	width: 20vw;
	height: 20vw;
	border-radius: 50%;
	border: 3px #eee solid;
	background-color: #ddd;
	background-position: center;
	background-size: cover;
	position: absolute;
	left: 5vw;
}
.count {
	width: 100%;
	margin-top: 2vw;
	height: 20vw;
}
.fans,
.follow,
.like {
	width: 33.33%;
	height: 100%;
	float: left;
	text-align: center;
}
.count .number {
	font-size: 4vw;
	color: #212121;
	line-height: 5vw;
}
.count .type {
	font-size: 3vw;
	color: #999;
}
.user_descrip {
	width: 90%;
	line-height: 10vw;
	margin: auto;
}

